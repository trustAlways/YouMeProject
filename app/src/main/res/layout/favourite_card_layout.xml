<?xml version="1.0" encoding="utf-8"?>
   <!--<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:elevation="25dp"
        >-->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="3dp"
        android:background="@color/white"
        android:elevation="25dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="1"
            >

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".2">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/favourite_image_icon"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/user_profile"
                   android:padding="5dp"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_user_name"
                android:hint="Harry poter"
                android:textSize="18dp"
                android:singleLine="true"
                android:textColor="@color/grey_light"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_compeatible"
                android:text="Compatible 0%"
                android:textSize="16dp"
                android:paddingLeft="5dp"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_date"
                android:hint="13/07/18"
                android:textSize="16dp"
                android:textColor="@color/grey_light"
                android:paddingLeft="5dp"/>

        </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/in_fav_send_crush"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@color/aurora_bg_input_default">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:text="Crush"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:background="@color/transparent"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:padding="@dimen/mrg1"
                    android:src="@drawable/crush"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/in_fav_send_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@color/aurora_bg_input_default">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:text="Date"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:background="@color/transparent"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:padding="@dimen/mrg1"
                    android:src="@drawable/datingg"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

