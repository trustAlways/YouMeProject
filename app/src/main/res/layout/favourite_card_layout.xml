<?xml version="1.0" encoding="utf-8"?>
   <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:elevation="25dp"
        android:background="@drawable/ripple_accent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="1"
            >

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".3">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/favourite_image_icon"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/user_profile"
                   android:padding="5dp"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_user_name"
                android:hint="Harry poter"
                android:textSize="18dp"
                android:singleLine="true"
                android:textColor="@color/grey_light"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_compeatible"
                android:text="Compatible 0%"
                android:textSize="16dp"
                android:paddingLeft="5dp"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_date"
                android:hint="13/07/18"
                android:textSize="16dp"
                android:textColor="@color/grey_light"
                android:paddingLeft="5dp"/>

        </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:layout_marginTop="20dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

