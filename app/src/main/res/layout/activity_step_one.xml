<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.activity.SignUp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/corner_border"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:padding="12dp"
        android:src="@drawable/youmelogo"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_content"
        android:maxLength="50"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:gravity="left|center_horizontal"
        android:singleLine="true"
        android:layout_below="@id/app_logo"
        android:textColor="@color/white"
        android:visibility="visible" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/content">

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/x_et_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/x_et_reg_log_bg"
                    android:hint="First name"
                    android:maxLength="10"
                    android:inputType="textNoSuggestions|text|textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/first_name_err"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="First name is required"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/x_et_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/x_et_reg_log_bg"
                    android:hint="Last name"
                    android:inputType="textNoSuggestions|text|textCapWords"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/last_name_err"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="Enter the Password"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:layout_gravity="center"
               android:weightSum="1"
               >

            <LinearLayout
                android:id="@+id/l_male_linear"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".45"
                android:background="@drawable/x_et_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/l_img_male"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/l_male"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/x_et_reg_log_bg"
                    android:text="Male"
                    android:gravity="center_vertical"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/app_background"
                    android:textSize="16sp" />

            </LinearLayout>

               <LinearLayout
                   android:id="@+id/ll_male_linear"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight=".45"
                   android:background="@drawable/x_et_bg"
                   android:elevation="5dp"
                   android:orientation="horizontal"
                   android:weightSum="1"
                   android:visibility="gone">

                   <ImageView
                       android:id="@+id/ll_img_male"
                       android:layout_width="40dp"
                       android:layout_height="match_parent"
                       android:padding="5dp"
                       android:src="@drawable/ic_launcher_background" />

                   <TextView
                       android:id="@+id/ll_male"
                       android:layout_width="100dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/x_et_reg_log_bg"
                       android:hint="Male"
                       android:gravity="center_vertical"
                       android:maxLength="50"
                       android:singleLine="true"
                       android:textColor="@color/black"
                       android:textSize="16sp" />

               </LinearLayout>




               <View
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/l_linear_female"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".45"
                android:background="@drawable/x_et_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/l_img_female"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/l_female"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/x_et_reg_log_bg"
                    android:hint="Female"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

               <LinearLayout
                   android:id="@+id/ll_linear_female"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight=".45"
                   android:background="@drawable/x_et_bg"
                   android:elevation="5dp"
                   android:orientation="horizontal"
                   android:weightSum="1"
                   android:visibility="gone">

                   <ImageView
                       android:id="@+id/ll_img_female"
                       android:layout_width="40dp"
                       android:layout_height="match_parent"
                       android:padding="5dp"
                       android:src="@drawable/ic_launcher_background" />

                   <TextView
                       android:id="@+id/ll_female"
                       android:layout_width="100dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/x_et_reg_log_bg"
                       android:text="Female"
                       android:gravity="center_vertical"
                       android:layout_marginRight="5dp"
                       android:maxLength="50"
                       android:singleLine="true"
                       android:textColor="@color/app_background"
                       android:textSize="16sp" />

               </LinearLayout>

           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dp">

            <TextView
                android:id="@+id/gender_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please select gender.."
                android:textSize="14sp"
                android:visibility="gone"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/x_et_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/x_et_reg_log_bg"
                    android:hint="How old are you?"
                    android:inputType="number"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/age_err"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:hint="Enter your age"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/x_et_bg"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/check_relationship_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/x_et_reg_log_bg"
                android:hint="Select your relationship status"
                android:maxLength="50"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/relation_status"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="visible"
                android:layout_gravity="right"
                android:layout_marginLeft="60dp"
                android:src="@drawable/ic_launcher_background" />

            <!-- Spinner Element -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/check_relationship_status_err"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:hint="Enter relation status"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:layout_marginRight="5dp"
         android:layout_marginLeft="5dp"
         android:background="@color/white">

         <EditText
             android:id="@+id/self_discripton"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="@string/self_description"
             android:maxLength="200"
             android:textSize="16sp"
             android:background="@drawable/x_et_reg_log_bg"
             android:padding="5dp"
             android:singleLine="false"
             android:textColor="@color/black"
             android:visibility="visible" />

     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/desc_err"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:hint="Enter relation status"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Next"
                android:textColor="@color/app_background"
                android:background="@color/white"
                android:visibility="visible" />

        </LinearLayout>



    </LinearLayout>
 </ScrollView>


</LinearLayout>

    </LinearLayout>
</RelativeLayout>