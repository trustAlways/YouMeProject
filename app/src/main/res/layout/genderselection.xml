<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/round_text_remove_item">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/userimage"
                android:layout_margin="30dp"
                android:visibility="visible"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/male_hair"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/hair"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_gravity="center|top"
            android:layout_marginTop="40dp"
            />

        <ImageView
            android:id="@+id/female_hair"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/female_hair"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_gravity="center|top"
            android:layout_marginTop="60dp"
            />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:src="@drawable/eyesiconn"
            android:scaleType="center"
            android:visibility="visible"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            />


        <ImageView
            android:id="@+id/mustache"
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:src="@drawable/hair"
            android:scaleType="center"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            />


        <ImageView
            android:id="@+id/mouth"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:src="@drawable/openmouth"
            android:scaleType="center"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/boys_tshrt"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/boys_tshrt"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            />

        <ImageView
            android:id="@+id/girl_tshrt"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:src="@drawable/girl_shirt"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_margin="50dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/male"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="male"
            android:textColor="@color/white"
            android:background="@drawable/checkout_button"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/female"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="female"
            android:textColor="@color/white"
            android:background="@drawable/ripple_accent"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

</LinearLayout>