<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.activity.edit_profile_activities.Edit_User_Lifestyle">

    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:layout_marginTop="18dp"
    card_view:cardCornerRadius="4dp">

      <LinearLayout
        android:id="@+id/ll_combo_package"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@drawable/upgrade_dialog_et">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".6"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".55"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:text="600 crushes+dates"/>

        <TextView
            android:id="@+id/validity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:textSize="13dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:text="Validity 12 months"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:id="@+id/original_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="30dp"
                android:text="$22,000"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="$20,000rs"/>

        </LinearLayout>
      </LinearLayout>

        <TextView
            android:id="@+id/cut_original_price"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:text="$20,000rs"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:textColor="@color/red"
            android:background="@color/red"
            android:textSize="16dp" />

</android.support.v7.widget.CardView>



</RelativeLayout>