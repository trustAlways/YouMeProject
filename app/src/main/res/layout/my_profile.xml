<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".64"
            android:weightSum="1"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:background="@color/blue"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/myProfile_arrow"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/left"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ripple_accent"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".46"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:gravity="center"
                    >

                <com.youme.candid.youmeapp.Activity.Constants.CircularImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/app_logo"
                    app:border="true"
                    app:border_color="#FF00FF"
                    app:border_width="2dp"
                    app:shadow="false"
                    android:id="@+id/user_profile_img"

                    />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/mrg2"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Balance"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/mrg1"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/crush"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Crush"
                            android:paddingLeft="@dimen/mrg1"
                            android:gravity="center"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/crush_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="0"
                            android:paddingLeft="@dimen/mrg2"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/mrg1"
                        android:layout_gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:src="@drawable/datingg"/>

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Date"
                            android:gravity="center"
                            android:paddingLeft="@dimen/mrg1"
                            android:textSize="20dp"/>


                        <TextView
                            android:id="@+id/date_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="0"
                            android:gravity="right"
                            android:paddingLeft="@dimen/size0"
                            android:textSize="20dp"/>

                    </LinearLayout>


                </LinearLayout>


                <!--  <ImageView
                      android:id="@+id/user_profile_img"
                      android:layout_width="250dp"
                      android:layout_height="match_parent"
                      android:src="@drawable/user_profile"
                      />-->


                <!--<com.jackandphantom.circularimageview.CircleImage-->
                    <!--android:layout_width="200dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/user_profile"-->
                    <!--app:border_width="1dp"-->
                    <!--app:border_color="#ed2e2e"-->
                    <!--android:id="@+id/user_profile_img" />-->

            </LinearLayout>

<!--//#e6e4e4-->


            <TextView
                android:id="@+id/user_Realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".02"
                android:text="Vishwas Shrivastava"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/size1"
                android:gravity="center"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                />

            <TextView
                android:id="@+id/user_pseudonam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".02"
                android:text="Test Test"
                android:layout_marginLeft="@dimen/size1"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif-light"

                />


            <LinearLayout
                android:id="@+id/ll_myprofile_upgrade_subscription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".13"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imag_subscription"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_accent"
                    android:src="@drawable/update_subs_btn"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_edit_user_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".49"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:background="@drawable/ripple_accent"
                    android:layout_margin="8dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:src="@drawable/edit_profile"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Edit/Update Profile"
                        android:gravity="center"
                        android:padding="5dp"
                       />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e2e2e2"/>


                <LinearLayout
                    android:id="@+id/my_profile_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:background="@drawable/ripple_accent"
                    android:layout_margin="5dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:src="@drawable/settings"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Settings"
                        android:gravity="center"
                        android:padding="5dp"
                        />


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".36"
            android:weightSum="1"
            android:orientation="vertical"
            android:background="#e9f9ff">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight=".18"
              android:text="My Activity"
              android:gravity="center"
              android:textSize="20dp"
              android:fontFamily="sans-serif-light"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".37"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_crushes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical"
                    android:background="@drawable/ripple_accent"

                    android:weightSum="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:padding="5dp"
                        android:src="@drawable/crush"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Crushes"
                        android:gravity="center_horizontal"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="58dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="0dp"
                    android:background="#e2e2e2" />

                <LinearLayout
                    android:id="@+id/ll_dates"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical"
                    android:background="@drawable/ripple_accent"

                    android:weightSum="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:src="@drawable/datingg"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Dating"
                        android:gravity="center_horizontal"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="25dp"
                    android:background="#e2e2e2"/>


                <LinearLayout
                    android:id="@+id/ll_messages"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical"
                    android:background="@drawable/ripple_accent"

                    android:weightSum="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:padding="3dp"
                        android:src="@drawable/messages"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Messages"
                        android:gravity="center_horizontal"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_my_favourites"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical"
                    android:background="@drawable/ripple_accent"

                    android:weightSum="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:padding="5dp"
                        android:src="@drawable/my_favourites"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="My
Favourites"
                        android:gravity="center_horizontal"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="25dp"
                    android:background="#e2e2e2"/>

                <LinearLayout
                    android:id="@+id/ll_compatibility_test"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical"
                    android:background="@drawable/ripple_accent"

                    android:weightSum="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:src="@drawable/compatibility_test"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Compatibility
Test"
                        android:gravity="center_horizontal"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="25dp"
                    android:background="#e2e2e2"/>


                <LinearLayout
                    android:id="@+id/ll_personality_test"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:background="@drawable/ripple_accent"

                    android:orientation="vertical"
                    android:weightSum="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:padding="3dp"
                        android:src="@drawable/personality_test"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:text="Personality
Test"
                        android:gravity="center_horizontal"
                        />


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>
</LinearLayout>