<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/blue"
            android:weightSum="1">

            <ImageView
                android:id="@+id/chngepassword_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/left"
                android:layout_marginLeft="20dp"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Change password"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textSize="18dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/ll_background"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Old Password"
                android:textColor="#6a6a6a"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/oldlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/x_et_bg"
                    >



                    <EditText
                        android:id="@+id/edt_user_oldpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter Your Old Password"
                        android:background="@drawable/x_et_reg_log_bg"
                        android:maxLength="50"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edt_user_oldpassworderr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:hint="This Field Is Required"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="10dp"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/ll_background"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="New Password"
                android:textColor="#6a6a6a"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/newlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/x_et_bg"
                    >



                    <EditText
                        android:id="@+id/edt_user_newpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter Your New Password"
                        android:background="@drawable/x_et_reg_log_bg"
                        android:maxLength="50"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edt_user_newpassworderr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:hint="This Field Is required"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="10dp"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/ll_background"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Confirm Password"
                android:textColor="#6a6a6a"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/confrmlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corner_border"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    android:weightSum="1"
                    android:background="@drawable/x_et_bg"
                    >

                    <EditText
                        android:id="@+id/edt_user_confrmpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter Your Confirm Password"
                        android:background="@drawable/x_et_reg_log_bg"
                        android:maxLength="50"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edt_user_confrmpassworderr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:hint="Enter the Password"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="10dp"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/newpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:hint="Enter the Password"
                    android:visibility="gone"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="10dp"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/red" />

            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="70dp"
                 android:layout_marginBottom="10dp"
                 android:layout_marginTop="5dp"
                 android:orientation="horizontal">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical">

                     <EditText
                         android:id="@+id/signInPassword"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:hint="Password"
                         android:background="@drawable/x_et_bg"
                         android:padding="10dp"
                         android:maxLength="50"
                         android:singleLine="true"
                         android:textColor="@color/black" />

                     <TextView
                         android:id="@+id/signInPassworderr"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:background="@color/transparent"
                         android:hint="mobile"
                         android:layout_marginRight="0dp"
                         android:layout_marginLeft="10dp"
                         android:maxLength="50"
                         android:visibility="gone"
                         android:singleLine="true"
                         android:textColor="@color/red" />

                 </LinearLayout>
             </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:background="@color/blue"
                    android:text="change password"
                    android:textColor="@color/white"
                     />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
